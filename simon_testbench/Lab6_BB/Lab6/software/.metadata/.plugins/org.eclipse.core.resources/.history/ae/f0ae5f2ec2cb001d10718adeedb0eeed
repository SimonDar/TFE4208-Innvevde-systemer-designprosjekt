void bin(unsigned n)
{
    unsigned i;
    for (i = 1 << 31; i > 0; i = i / 2)
        (n & i) ? printf("1") : printf("0");
    printf("\n");
}

int main()
{
printf("Hello from Nios II!1\n");
int count = 0;
int delay;
while(1)
{
	for(int32_t var = 0b0; var <= 0b111111111111111100; var = pow(2,count))
	{
		IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, var);
		delay = 0;
		bin(var);
		printf("\n");

		while(delay < 1000000)
		{
		delay++;
		}
		count++;

	}
	printf("Done\n");
	count = 0;


}
return 0;
}
